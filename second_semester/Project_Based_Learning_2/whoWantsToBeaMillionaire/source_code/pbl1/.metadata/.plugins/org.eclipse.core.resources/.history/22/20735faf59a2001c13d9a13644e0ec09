package pbl;

import enigma.core.Enigma;

class Multithrading implements Runnable {
	   private Thread t;
	   static boolean flag = false;
	   public static enigma.console.Console cn = Enigma.getConsole("Mouse and Keyboard");
	   public int timer = 20;
	   Multithrading() {
	   }
	   
	   public void run() {
	      try {
	    		  for(int i = 20; i > 0; i--) {
	    			if (flag) {
						break;
					}
	    			if (i >= 10) {
	    				cn.getTextWindow().setCursorPosition(40, 1);
		  	            System.out.print(i);
		  	            timer--;
		  	            cn.getTextWindow().setCursorPosition(0, 9);
		  	            // Let the thread sleep for a while.
		  	            Thread.sleep(1000);
					}
	    			else {
	    				cn.getTextWindow().setCursorPosition(40, 1);
		  	            System.out.print(" "+i);
		  	            timer--;
		  	            cn.getTextWindow().setCursorPosition(0, 9);
		  	            // Let the thread sleep for a while.
		  	            Thread.sleep(1000);
					}
	    			
			}
	         
	      } catch (InterruptedException e) {
	         System.out.println("...");
	      }
	   }
	   
	   public void start () {
	      if (t == null) {
	         t = new Thread (this);
	         t.start ();
	      }
	   }
	   
	   public void end() {
		   t.interrupt();
	   }
	   
	}